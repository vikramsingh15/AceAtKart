<%include ../partials/header.ejs%>
<div class="container">
    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Create a New Blog</h1>
            <div >
                <form action="/news" method="POST" >
                     <div class="form-group">
                        <label for="author">Meta description</label>
                        <input class="form-control" type="text" name="news[meta]" placeholder="Meta description here">
                    </div>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" name="news[title]" placeholder="name">
                    </div>
                  
                   <div class="form-group">
                        <label for="subtitle">Subtitle</label>
                        <input class="form-control" type="text" name="news[subtitle]" placeholder="Subtitle here">
                    </div>
                  
                    <div class="form-group">
                        <label for="author">Author</label>
                        <input class="form-control" type="text" name="news[author]" placeholder="Author here">
                    </div>
                    
                    <div class="form-group">
                        <label for="imageUrl">Image url</label>
                        <input class="form-control" type="url" name="news[imageUrl]" placeholder="Url only">
                    </div>
                    
                    
                    <div class="form-group">
                        <textarea name="news[body]" placeholder="Body of news" class="form-control" rows="15"></textarea>
                     </div>
                     
                     
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary ">Submit!</button>
                    </div>
                </form>
            
            </div>
        </div>
    </div>
</div>





<%include ../partials/footer.ejs%>