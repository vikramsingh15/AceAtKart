<%include ../partials/header.ejs%>
<div class="container">
    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Edit Blog <%=data.title%></h1>
            <div >
                <form action="/news/<%=data.id%>?_method=PUT" method="POST" >
                     <div class="form-group">
                        <label for="author">Meta description</label>
                        <input class="form-control" type="text" name="news[meta]" value="<%=data.meta%>">
                    </div>
                    
                    
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" name="news[title]" value="<%=data.title%>">
                    </div>
                    
                     <div class="form-group">
                        <label for="subtitle">Subtitle</label>
                        <input class="form-control" type="text" name="news[subtitle]" placeholder="Subtitle here"value="<%=data.subtitle%>">
                    </div>
                  
                    <div class="form-group">
                        <label for="author">Author</label>
                        <input class="form-control" type="text" name="news[author]" placeholder="Author here" value="<%=data.author%>">
                    </div>
                    
                    <div class="form-group">
                        <label for="imageUrl">Image url</label>
                        <input class="form-control" type="url" name="news[imageUrl]" value="<%=data.imageUrl%>">
                    </div>
                    
                    
                    <div class="form-group">
                        <textarea name="news[body]" placeholder="Body of news" class="form-control" rows="15"><%=data.body%></textarea>
                     </div>
                     
                     
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary ">Submit!</button>
                    </div>
                </form>
            
            </div>
        </div>
    </div>
</div>





<%include ../partials/footer.ejs%>